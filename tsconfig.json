{
  "compilerOptions": {
    "target": "es2024",
    "module": "node20",
    "moduleResolution": "nodenext",
    "lib": ["es2024"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
